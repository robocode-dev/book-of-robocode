// Global styles for dark mode and mobile-friendly UI
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap')

html, body
  font-family 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

// Dark mode styles
body
  background-color #0d1117
  color #c9d1d9

.theme-default-content
  background-color #0d1117
  
.theme-default-content:not(.custom)
  max-width 900px
  padding 2rem 2.5rem
  
  @media (max-width: 719px)
    padding 1.5rem 1.25rem

.navbar
  background-color #161b22
  border-bottom 1px solid #30363d
  
.sidebar
  background-color #0d1117
  border-right 1px solid #30363d

.sidebar-heading
  color #58a6ff
  font-weight 600

.sidebar-link
  color #8b949e
  
  &.active
    color #58a6ff
    border-left-color #58a6ff
    
  &:hover
    color #58a6ff

// Code blocks
div[class*="language-"]
  background-color #161b22
  border-radius 6px
  
  .highlight-lines .highlighted
    background-color rgba(88, 166, 255, 0.1)

code
  color #79c0ff
  background-color #161b22
  padding 0.2rem 0.4rem
  border-radius 3px

pre, pre[class*="language-"]
  background-color #161b22
  
// Tables
table
  display block
  overflow-x auto
  
  @media (max-width: 719px)
    font-size 0.9em

tr
  background-color #0d1117
  border-top 1px solid #30363d
  
  &:nth-child(2n)
    background-color #161b22

th, td
  border 1px solid #30363d
  padding 0.6em 1em

th
  background-color #21262d
  font-weight 600

// Links
a
  color #58a6ff
  text-decoration none
  
  &:hover
    color #79c0ff
    text-decoration underline

// Headers
h1, h2, h3, h4, h5, h6
  color #c9d1d9
  
  .header-anchor
    color #58a6ff

// KaTeX formulas
.katex-display
  overflow-x auto
  overflow-y hidden
  
  @media (max-width: 719px)
    font-size 0.9em

// Search box
.search-box
  input
    background-color #161b22
    border-color #30363d
    color #c9d1d9
    
    &:focus
      border-color #58a6ff

// Mobile improvements
@media (max-width: 719px)
  .navbar
    .site-name
      font-size 1.2rem
  
  .sidebar
    background-color #0d1117
    
  .page
    padding-left 0

// Smooth scrolling
html
  scroll-behavior smooth

// Custom container styles
.custom-block
  &.tip
    background-color rgba(88, 166, 255, 0.1)
    border-color #58a6ff
    
  &.warning
    background-color rgba(187, 128, 9, 0.1)
    border-color #bb8009
    
  &.danger
    background-color rgba(248, 81, 73, 0.1)
    border-color #f85149
